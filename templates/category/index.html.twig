{% extends 'base.html.twig' %}

{% block title %}All categories{% endblock %}

{% block body %}
<h1>Toutes les séries de la table Category : </h1>
{% for category in categories %}
<div>
    <h2>{{ loop.index }} / {{ category.name }} </h2>
    <a href="{{ path('category_show', { categoryName: category.name|lower }) }}">Voir la fiche</a>
</div>
{% else %}
Aucune catégorie trouvée.
{% endfor %}

<a href="{{ path('index') }}">
    Retour à l'accueil
</a>
{% endblock %}