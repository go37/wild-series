{% extends 'base.html.twig' %}

{% block title %}All programs{% endblock %}

{% block body %}
<h1>Toutes les séries de la table Program : </h1>
{% for program in programs %}
<div>
    <h2>{{ loop.index }} / {{ program.title }} - Catégorie : {{ program.category.name }}</h2>
    <p>{{ program.summary|length > 150 ? program.summary|slice(0, 150) ~ ' ...' : program.summary }}</p>
    <a href="{{ path('program_show', { id: program.id }) }}">Voir la fiche</a>
</div>
{% else %}
Aucune série trouvée.
{% endfor %}

<a href="{{ path('index') }}">
    Retour à l'accueil
</a>
{% endblock %}